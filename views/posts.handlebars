{{#each posts as |post| }}
<ul>
    <li>{{ post.name }}</li>
</ul>
{{/each}}

<div class="card">
{{#each posts as |post| }}
  <div class="card-header">
    <h3>{{post.user.name}}</h3> <h4>{{post.date}}</h4>
  </div>
  <div class="card-body">
    <h5 class="card-title">Special title treatment</h5>
    <p class="card-text">{{post.content}}</p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
</div>