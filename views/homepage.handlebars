<div class="card">
  {{#each posts as |post|}}
    <div class="card-header">
    </div>
    <div class="card-body">
      <a href="/api/posts/{{post.id}}" class="card-title">{{post.title}}</a>
      <div class="card">
        <div class="card-body">
          {{post.content}}
        </div>
      </div>
      {{#each post.comments as |comment|}}
      <div class="card-body">
          {{comment.content}}
        </div>
        {{/each}}
    </div>
  {{/each}}
</div>